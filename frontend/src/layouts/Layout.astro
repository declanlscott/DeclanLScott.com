---
import { ViewTransitions } from "astro:transitions";

import Nav from "~/components/Nav.astro";
import Prose from "~/components/Prose.astro";
import ContactCard from "~/components/ContactCard.astro";
import { env } from "~/env";

type Props = {
  title?: string;
};

const { title } = Astro.props;

const navItems = [
  { name: "home", href: "/" },
  { name: "projects", href: "/projects" },
  { name: "blog", href: "/blog" },
  { name: "guestbook", href: "/guestbook" },
  { name: "contact", href: "#contact" },
];

const {
  PUBLIC_NAME: name,
  PUBLIC_EMAIL: email,
  PUBLIC_LINKEDIN: linkedin,
  PUBLIC_X_USERNAME: xUsername,
} = env();
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | ${name}` : name}</title>
    <ViewTransitions />
  </head>

  <body class="container px-6 mx-auto mt-8 bg-white dark:bg-neutral-900">
    <Prose>
      <div class="flex min-h-[calc(100vh-2rem)] flex-col">
        <header class="pb-6 md:pb-12">
          <Nav items={navItems} />
        </header>

        <main class="flex-grow mb-32">
          <div transition:animate="slide">
            <slot />
          </div>

          <section id="contact" transition:name="contact">
            <h2>Contact me</h2>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
              <ContactCard href={`mailto:${email}`} title={email}>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-at-sign"
                  slot="icon"
                >
                  <circle cx="12" cy="12" r="4"></circle><path
                    d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-4 8"></path>
                </svg>
              </ContactCard>

              <ContactCard href={linkedin} title={name}>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-linkedin"
                  slot="icon"
                >
                  <path
                    d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                  ></path>
                  <rect width="4" height="12" x="2" y="9"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
              </ContactCard>

              <ContactCard
                href={`https://x.com/${xUsername}`}
                title={`@${xUsername}`}
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  slot="icon"
                >
                  <path
                    d="M8.58 11.42 1 19M12.37 7.63l.08-.08L19 1M20.63 19 7.54 1H1.02l13.07 18h6.55Z"
                  ></path>
                </svg>
              </ContactCard>
            </div>
          </section>
        </main>

        <footer class="flex h-16 items-center justify-between">
          <div class="flex gap-4 items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-code-2"
            >
              <path d="m18 16 4-4-4-4"></path>
              <path d="m6 8-4 4 4 4"></path>
              <path d="m14.5 4-5 16"></path>
            </svg>

            <p class="text-sm">Developed by <a href="/">Declan L. Scott</a></p>
          </div>

          <a
            href="https://github.com/declanlscott/DeclanLScott.com"
            class="text-neutral-700 dark:text-neutral-300 h-10 w-10 rounded-lg bg-tranparent transition-all hover:dark:text-white hover:dark:bg-neutral-800 hover:text-black hover:bg-neutral-100 flex justify-center items-center"
            target="_blank"
            aria-label="GitHub Repository for DeclanLScott.com"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-github"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </a>
        </footer>
      </div>
    </Prose>

    <style is:global>
      @font-face {
        font-family: "Geist";
        src: url("/fonts/GeistVariableVF.woff2") format("woff2");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
