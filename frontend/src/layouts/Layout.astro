---
import { ViewTransitions } from "astro:transitions";

import ContactCard from "~/components/ContactCard.astro";
import Nav from "~/components/Nav.astro";
import Prose from "~/components/Prose.astro";
import { env } from "~/env";

type Props = {
  title?: string;
};

const { title } = Astro.props;

const navItems = [
  { name: "home", href: "/" },
  { name: "projects", href: "/projects" },
  { name: "blog", href: "/blog" },
  { name: "guestbook", href: "/guestbook" },
  { name: "contact", href: "#contact" },
];

const {
  PUBLIC_NAME: name,
  PUBLIC_EMAIL: email,
  PUBLIC_LINKEDIN: linkedin,
  PUBLIC_X_USERNAME: xUsername,
} = env();
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | ${name}` : name}</title>
    <ViewTransitions />
  </head>

  <body
    class="body-gradient container mx-auto mt-8 bg-white px-6 transition-colors duration-300 dark:bg-neutral-900"
  >
    <Prose>
      <div class="flex min-h-[calc(100vh-2rem)] flex-col">
        <header class="pb-6 md:pb-12">
          <Nav items={navItems} />
        </header>

        <main class="mb-32 flex-grow">
          <section transition:animate="slide">
            <slot />
          </section>

          <section id="contact" transition:name="contact">
            <h3>Contact me</h3>

            <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
              <ContactCard href={`mailto:${email}`} title={email}>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  slot="icon"
                >
                  <circle cx="12" cy="12" r="4"></circle><path
                    d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-4 8"></path>
                </svg>
              </ContactCard>

              <ContactCard href={linkedin} title={name}>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  slot="icon"
                >
                  <path
                    d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                  ></path>
                  <rect width="4" height="12" x="2" y="9"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
              </ContactCard>

              <ContactCard
                href={`https://x.com/${xUsername}`}
                title={`@${xUsername}`}
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  slot="icon"
                >
                  <path
                    d="M8.58 11.42 1 19M12.37 7.63l.08-.08L19 1M20.63 19 7.54 1H1.02l13.07 18h6.55Z"
                  ></path>
                </svg>
              </ContactCard>
            </div>
          </section>
        </main>

        <footer class="flex h-16 items-center justify-between">
          <div class="flex items-center gap-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m18 16 4-4-4-4"></path>
              <path d="m6 8-4 4 4 4"></path>
              <path d="m14.5 4-5 16"></path>
            </svg>

            <p class="text-sm">
              <span class="text-neutral-500 dark:text-neutral-400"
                >designed & developed by</span
              >
              <a href="/">Declan L. Scott</a>
            </p>
          </div>

          <a
            href="https://github.com/declanlscott/DeclanLScott.com"
            class="bg-tranparent flex h-10 w-10 items-center justify-center rounded-lg text-neutral-700 transition-all hover:bg-neutral-100 hover:text-black dark:text-neutral-300 hover:dark:bg-neutral-800 hover:dark:text-white"
            target="_blank"
            aria-label="GitHub Repository for DeclanLScott.com"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </a>
        </footer>
      </div>
    </Prose>

    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;

      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Regular.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-SemiBold.woff2") format("woff2");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-ExtraBold.woff2") format("woff2");
        font-weight: 800;
        font-style: normal;
        font-display: swap;
      }

      html {
        scroll-behavior: smooth;
      }

      ::selection {
        color: white;
        background: rgb(23, 23, 23);
      }

      @media (prefers-color-scheme: dark) {
        ::selection {
          color: rgb(23, 23, 23);
          background: white;
        }
      }

      @layer base {
        :root {
          --gradient-color-1: hsl(239, 83.5%, 66.7%);
          --gradient-color-2: hsl(255, 91.7%, 76.3%);
          --gradient-color-3: hsl(0, 93.5%, 81.8%);
          --gradient-color-4: hsl(27, 96%, 61%);

          --purple-hsl: 255, 85%, 65%;
          --highlight: hsla(var(--purple-hsl), 0.2);
        }

        @media (prefers-color-scheme: dark) {
          :root {
            --gradient-color-1: hsl(244, 78%, 82.2%);
            --gradient-color-2: hsl(266, 36.8%, 85.1%);
            --gradient-color-3: hsl(0, 35.8%, 84.1%);
            --gradient-color-4: hsl(25, 72.9%, 69.6%);

            --highlight: hsla(0, 0%, 14.9%, 100%);
          }
        }
      }

      /* 
      * Gradient page background effect
      * CREDIT: https://github.com/withastro/starlight/blob/f277809429317730fef323da6d9319feba5b8dca/docs/src/assets/landing.css#L10
      * from the MIT-licensed Astro Starlight project
      */
      .body-gradient {
        background:
          linear-gradient(215deg, var(--highlight), transparent 40%),
          radial-gradient(var(--highlight), transparent 40%) no-repeat -60vw -40vh /
            105vw 200vh,
          radial-gradient(var(--highlight), transparent 65%) no-repeat 50%
            calc(100% + 20rem) / 60rem 30rem;
      }

      @media (prefers-color-scheme: dark) {
        .body-gradient {
          background: transparent;
        }
      }
    </style>
  </body>
</html>
