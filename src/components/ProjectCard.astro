---
import { Picture } from "astro:assets";

import type { CollectionEntry } from "astro:content";

type Props = {
  project: CollectionEntry<"projects">;
};

const { project } = Astro.props;
---

<div
  class="group relative gap-4 rounded-lg border border-neutral-200 bg-neutral-50/50 p-6 transition-colors hover:bg-neutral-100 dark:border-neutral-600 dark:bg-neutral-800/60 hover:dark:bg-neutral-800"
>
  <div class="flex items-center justify-between gap-4">
    <h2 class="m-0">
      <a
        href=`/projects/${project.slug}`
        class="after:absolute after:inset-0 group-hover:decoration-neutral-500 group-hover:decoration-[3px] group-hover:underline-offset-[3px] group-hover:dark:decoration-neutral-400"
      >
        {project.data.name}
      </a>
    </h2>

    <div class="flex items-center">
      <a
        href={project.data.repo}
        class="z-10 rounded-lg p-2.5 text-neutral-900 hover:bg-neutral-200 hover:text-black dark:text-white hover:dark:bg-neutral-700 hover:dark:text-white"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-5 w-5"
        >
          <path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path>
          <path d="M9 18c-4.51 2-5-2-7-2"></path>
        </svg>
      </a>

      <a
        href={project.data.url}
        class="z-10 rounded-lg p-2.5 text-neutral-900 hover:bg-neutral-200 hover:text-black dark:text-white hover:dark:bg-neutral-700 hover:dark:text-white"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-5 w-5"
        >
          <path d="M15 3h6v6"></path>
          <path d="M10 14 21 3"></path>
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
          ></path>
        </svg>
      </a>
    </div>
  </div>

  <p>
    {project.data.blurb}
  </p>

  <a href=`/projects/${project.slug}`>
    <Picture
      src={project.data.image}
      alt={project.data.name}
      formats={["avif", "webp"]}
      transition:name={`${project.slug}-img`}
      class="rounded-lg"
    />
  </a>
</div>
